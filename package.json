{
  "name": "type-prompt",
  "version": "1.0.0",
  "description": "A TypeScript library for LLM prompt templating with support for chat messages, function calling, and vision models",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "tsc"
  },
  "author": "github.com/marko911",
  "license": "MIT",
  "dependencies": {
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/nunjucks": "^3.2.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.6",
    "typescript": "^5.8.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage"
  }
}